<%  case @params[:adapter]
    when "mysql" %>
<%= @params[:environment] %>:
  adapter: <%= @params[:adapter] %>
  database: <%= @params[:database] %>
  username: <%= @params[:db_user] %>
  password: <%= @params[:db_password] %>
  host: <%= @params[:db_sever] %>
  encoding: utf8
  #socket: /var/lib/mysql/mysql.sock
<%  when "sqlite3","sqlite"%>
# SQLite version 3.x
<%= @params[:environment] %>:
  host: <%= @params[:db_sever] %>
  adapter: <%= @params[:adapter] %>
  database: <%= @params[:database] %>
  pool: 5
  timeout: 5000
<%  when "postgresql"%>
<%= @params[:environment] %>:
  host: <%= @params[:db_sever] %>
  adapter: <%= @params[:adapter] %>
  database: <%= @params[:database] %>
  username: <%= @params[:db_user] %>
  password: <%= @params[:db_password] %>
<%  else%>
<%= @params[:environment] %>:
  host: <%= @params[:db_sever] %>
  adapter: <%= @params[:adapter] %>
  database: <%= @params[:database] %>

<%end%>