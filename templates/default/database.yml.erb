<%  case @adapter
    when "mysql" %>
<%= @environment %>:
  adapter: <%= @adapter %>
  database: <%= @database %>
  username: <%= @db_user %>
  password: <%= @db_password %>
  host: <%= @db_sever %>
  encoding: utf8
  #socket: /var/lib/mysql/mysql.sock
<%  when "sqlite3","sqlite"%>
# SQLite version 3.x
<%= @environment %>:
  host: <%= @db_sever %>
  adapter: <%= @adapter %>
  database: <%= @database %>
  pool: 5
  timeout: 5000
<%  when "postgresql"%>
<%= @environment %>:
  host: <%= @db_sever %>
  adapter: <%= @adapter %>
  database: <%= @database %>
  username: <%= @db_user %>
  password: <%= @db_password %>
<%  else%>
<%= @environment %>:
  host: <%= @db_sever %>
  adapter: <%= @adapter %>
  database: <%= @database %>

<%end%>